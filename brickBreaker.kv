#:kivy 1.0.9

<Brick>:
    size: 25, 130
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Ball>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<Paddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<Game>:
    ball: ball
    player1: player
    # player2: player_right
    brick1: brick_one
    brick2: brick_two
    brick3: brick_three
    brick4: brick_four
    brick5: brick_five
    brick6: brick_six
    brick7: brick_seven
    brick8: brick_eight
    brick9: brick_nine
    brick10: brick_ten

    canvas:[-8.574355240000006, 0.48346681823204063]
        # Rectangle:
        #     pos: self.center_x-5, 0
        #     size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    # Label:
    #     font_size: 70  
    #     center_x: root.width * 3 / 4
    #     top: root.top - 50
    #     # text: str(root.player2.score)
    
    Ball:
        id: ball
        center: self.parent.center
        
    Brick:
        id: brick_one
        x: root.width-self.width - 10
        center_y: root.top - 130

    Brick:
        id: brick_two
        x: root.width-self.width - 10
        center_y: root.top - 290

    Brick:
        id: brick_three
        x: root.width-self.width - 10
        center_y: root.top - 450

    Brick:
        id: brick_four
        x: root.width-self.width - 60
        center_y: root.top - 130

    Brick:
        id: brick_five
        x: root.width-self.width - 60
        center_y: root.top - 290

    Brick:
        id: brick_six
        x: root.width-self.width - 60
        center_y: root.top - 450

    Brick:
        id: brick_seven
        x: root.width-self.width - 110
        center_y: root.top - 130

    Brick:
        id: brick_eight
        x: root.width-self.width - 110
        center_y: root.top - 290

    Brick:
        id: brick_nine
        x: root.width-self.width - 110
        center_y: root.top - 450

    Brick:
        id: brick_ten
        x: root.width-self.width - 160
        center_y: root.top - 290

    Paddle:
        id: player
        x: 0
        center_y: root.center_y
        