#:kivy 1.0.9

<Brick>:
    size: 25, 100
    canvas:
        # Color:
        #     rgb: 1,0,0
        Rectangle:
            pos: self.pos
            size: self.size

<Ball>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<Paddle>:
    size: 25, 200
    canvas:
        Color:
            rgb: 1,1,0
        Rectangle:
            pos:self.pos
            size:self.size

<Game>:
    ball: ball
    player1: player
    # player2: player_right
    brick1: brick_one
    brick2: brick_two
    brick3: brick_three
    brick4: brick_four
    brick5: brick_five
    brick6: brick_six
    brick7: brick_seven
    brick8: brick_eight
    brick9: brick_nine
    brick10: brick_ten
    test: testing
    canvas:
        # Rectangle:
        #     pos: self.center_x-5, 0
        #     size: 10, self.height
    
    Button:
        id: testing
        text: 'game Over! Click to play again'
        halign: 'center'
        valign: 'middle'
        font_size: 15
        size: 250, self.height
        x: -500
        on_release: root.hideRestart()


    # Label:
    #     font_size: 70  
    #     center_x: root.width / 4
    #     top: root.top - 50
    #     text: str(root.player1.score)
        
    # Label:
    #     id: test_button
    #     font_size: 70  
    #     center_x: root.width / 4
    #     # center_x: root.width * 3 / 4
    #     top: root.top - 50
    #     text: 'Game Over'
    
    Ball:
        id: ball
        center: self.parent.center
        
    Brick:
        id: brick_one
        x: root.width-self.width - 10
        center_y: root.top/2 + 170
        # 130

    Brick:
        id: brick_two
        x: root.width-self.width - 10
        center_y: root.top/2 + 10
        # 290

    Brick:
        id: brick_three
        x: root.width-self.width - 10
        center_y: root.top/2 - 150

    Brick:
        id: brick_four
        x: root.width-self.width - 60
        center_y: root.top/2 + 170

    Brick:
        id: brick_five
        x: root.width-self.width - 60
        center_y: root.top/2 + 10

    Brick:
        id: brick_six
        x: root.width-self.width - 60
        center_y: root.top/2 - 150

    Brick:
        id: brick_seven
        x: root.width-self.width - 110
        center_y: root.top/2 + 170

    Brick:
        id: brick_eight
        x: root.width-self.width - 110
        center_y: root.top/2 + 10

    Brick:
        id: brick_nine
        x: root.width-self.width - 110
        center_y: root.top/2 - 150

    Brick:
        id: brick_ten
        x: root.width-self.width - 160
        center_y: root.top/2 + 10

    Paddle:
        id: player
        x: 0
        center_y: root.center_y
<Manager>:
    id: screen_manager
    # test: testing

    Screen:
        name: 'home'
        Button:
            text: 'Play BrickBreaker'
            halign: 'center'
            valign: 'middle'
            font_size: 100
            text_size: self.size
            on_release: root.current = 'game';game.serve_ball(vel=(4, 0))

    Screen:
        name: 'game'
        Game:
            id: game
            